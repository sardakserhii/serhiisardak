---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Projects from "../components/Projects.astro";
import Contacts from "../components/Contacts.astro";
import ProjectsGrid from "../components/ProjectsGrid.astro";

const seo = {
  title: "Serhii Sardak – Web-Developer für schnelle One-Page-Websites",
  description:
    "Moderne One-Page-Websites mit Astro & Tailwind. Klarer Aufbau, schnelle Ladezeiten, SEO-ready. In 7 Tagen live – inkl. Domain & SSL.",
  url: "https://sardak.dev",
  image: "https://sardak.dev/og/og-cover.jpg",
  locale: "de_DE",
};
---
<BaseLayout {...seo}>
  <Hero />
  <ProjectsGrid />
  <!-- <Projects /> -->
  <Contacts />

  {/* JSON-LD – если нужен именно на главной */}
  <Fragment slot="structured-data">
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: "Serhii Sardak",
        url: "https://sardak.dev",
        jobTitle: "Web-Developer",
        image: "https://sardak.dev/img/profile.webp",
        sameAs: [
          "https://www.linkedin.com/in/serhiisardak/",
          "https://github.com/sardakserhii",
        ],
      })}
    </script>
  </Fragment>
</BaseLayout>
